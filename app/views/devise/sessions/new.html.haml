.min-h-screen.bg-gray-50.flex.items-center.justify-center.py-12.px-4
  .space-y-8{style: "width: 100%; max-width: 400px;"}
    
    -# Logo y título
    .text-center
      .mx-auto.h-16.w-16.rounded-2xl.flex.items-center.justify-center.mb-4{style: "background-color: #DC3545"}
        %h1.text-3xl.font-bold.text-white GS
      %h2.text-2xl.font-bold.text-gray-900 Gente del Sol
      %p.mt-2.text-sm.text-gray-600 Sistema de Gestión
    
    -# Formulario de login
    .bg-white.rounded-2xl.shadow-sm.p-6
      
      -# Errores
      - if flash[:alert]
        .bg-red-50.border-l-4.border-red-500.p-4.rounded-lg.mb-6
          %p.text-sm.text-red-700= flash[:alert]
      
      - if flash[:notice]
        .bg-blue-50.border-l-4.border-blue-500.p-4.rounded-lg.mb-6
          %p.text-sm.text-blue-700= flash[:notice]
      
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f|
        
        -# Email
        .space-y-2
          = f.label :email, "Email", class: "block text-sm font-medium text-gray-700"
          = f.email_field :email, 
                         autofocus: true, 
                         autocomplete: "email",
                         placeholder: "tu@email.com",
                         class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:border-gray-400 transition-all"
        
        -# Password
        .space-y-2
          = f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700"
          = f.password_field :password, 
                            autocomplete: "current-password",
                            placeholder: "••••••••",
                            class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:border-gray-400 transition-all"
        
        -# Submit
        .pt-2
          = f.submit "Iniciar Sesión", 
                    class: "w-full inline-flex items-center justify-center px-4 py-3 text-white text-base font-semibold rounded-xl shadow-sm transition-colors",
                    style: "background-color: #DC3545"
    
    -# Footer
    .text-center.text-xs.text-gray-500
      %p © 2025 Gente del Sol. Todos los derechos reservados.

