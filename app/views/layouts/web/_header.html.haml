%header.bg-white.border-b.border-slate-200.sticky.top-0.z-40.px-6.py-3
  .flex.items-center.justify-between
    -# Breadcrumbs + Título
    %div
      -# Breadcrumbs (opcional)
      - if content_for?(:breadcrumbs)
        %nav.flex.items-center.gap-2.text-xs.text-slate-500.mb-1
          = yield :breadcrumbs
      
      -# Título de página
      .flex.items-center.gap-3
        %h1.text-xl.font-semibold.text-slate-900= yield :page_title
    
    -# Acciones de usuario
    - if user_signed_in?
      .flex.items-center.gap-3
        -# Avatar + Info
        .flex.items-center.gap-2.px-2.py-1.5.rounded-lg
          .w-8.h-8.rounded-full.bg-slate-700.flex.items-center.justify-center
            %span.text-white.text-sm.font-semibold= current_user.name.first.upcase
          .hidden.lg:block
            %p.text-sm.font-medium.text-slate-900= current_user.name
            %p.text-xs.text-slate-500= current_user.role.titleize
        
        -# Botón Salir
        = link_to destroy_user_session_path, 
                 data: { turbo_method: :delete },
                 class: "inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-lg transition-colors" do
          %span Salir
